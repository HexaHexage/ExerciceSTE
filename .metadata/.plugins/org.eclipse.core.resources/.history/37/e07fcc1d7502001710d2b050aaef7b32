			menuComptaParticulier.addMenu(new MenuItem("Modifier", ()->{}));
			menuComptaParticulier.addMenu(new MenuItem("Supprimer", ()->{}));
			menuComptaParticulier.addMenu(new MenuItem("Lister", ()->{}));
			
			Menu menuCompta = new Menu();
